<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">


<suite name="Regression Suite">

	<!-- there are active inactive and closed because in real life scenario 
		you may have to test active accounts, inactive accounts, and closed accounts 
		and validate the exepected results vs the actual results required by the 
		business department -->


	<test name="Active">

		<parameter name="osType" value="mac"></parameter>
		<parameter name="browserType" value="chrome"></parameter>
		<parameter name="runLocal" value="true"></parameter>
		<parameter name="useGrid" value="false"></parameter>
		<parameter name="useAWS" value="false"></parameter>
		<parameter name="useSauceLabs" value="false"></parameter>
		<parameter name="accountStatus" value="ACTIVE"></parameter>

		<classes>

			<class name="Runners.Runner"></class>

		</classes>

	</test>

	<test name="Inactive">

		<parameter name="osType" value="mac"></parameter>
		<parameter name="browserType" value="chrome"></parameter>
		<parameter name="runLocal" value="true"></parameter>
		<parameter name="useGrid" value="false"></parameter>
		<parameter name="useAWS" value="false"></parameter>
		<parameter name="useSauceLabs" value="false"></parameter>
		<parameter name="accountStatus" value="ACTIVE"></parameter>

		<classes>

			<class name="Runners.Runner"></class>

		</classes>

	</test>


	<test name="Closed">

		<parameter name="osType" value="mac"></parameter>
		<parameter name="browserType" value="chrome"></parameter>
		<parameter name="runLocal" value="true"></parameter>
		<parameter name="useGrid" value="false"></parameter>
		<parameter name="useAWS" value="false"></parameter>
		<parameter name="useSauceLabs" value="false"></parameter>
		<parameter name="accountStatus" value="ACTIVE"></parameter>

		<classes>

			<class name="Runners.Runner"></class>

		</classes>

	</test>



</suite>

	
	
	
